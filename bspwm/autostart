# Display setup
xrandr --output DFP1 --left-of DFP6
compton -bCG

# Keyboard & Mouse
setxkbmap -option grp:alt_caps_toggle,grp_led:scroll,numpad:microsoft us,il
xset m 1 0 && xinput set-prop 10 273 1.4

# X settings
xrdb -merge ~/.Xresources
feh --bg-scale /usr/share/backgrounds/Tesla_by_Tomasino.cz.jpg

# UI Environment
export NO_AT_BRIDGE=1
export QT_STYLE_OVERRIDE="GTK+"
export _JAVA_OPTIONS="-Dawt.useSystemAAFontSettings=on -Dswing.aatext=true"
export _JAVA_AWT_WM_NONREPARENTING=1

